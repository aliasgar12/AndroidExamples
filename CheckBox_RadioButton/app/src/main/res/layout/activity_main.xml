<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alias.checkbox_radiobutton.MainActivity">

    <TextView
        android:text="Check Hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/checkboxes">

        <CheckBox
            android:text="Cricket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cricketcheckBox"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:text="Football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footballcheckbox"
            android:layout_weight="1" />

        <CheckBox
            android:text="Hockey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hockeycheckbox"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="Select City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkboxes"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:textSize="24dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/citygroup"
        android:orientation="vertical"
        android:layout_below="@+id/textView3">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mumbai"
            android:id="@+id/mumbai"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="London"
            android:id="@+id/london"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tokyo"
            android:id="@+id/tokyo"/>
    </RadioGroup>
</RelativeLayout>
